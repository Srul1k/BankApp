@model BankApp.Models.User
@{
    ViewBag.Title = Model.Name;
}
<h2>Пользователь @Model.Name</h2>
<div>
    <dl class="dl-horizontal">
        <dt>Идентификатор</dt>
        <dd>@Model.Id</dd>

        <dt>Имя</dt>
        <dd>@Model.Name</dd>

        <dt>Фамилия</dt>
        <dd>@Model.Surname</dd>

        <dt>Возраст</dt>
        <dd>@Model.Age</dd>

        <dt>Адрес</dt>
        <dd>@Model.AdressOfResidance</dd>

        <dt>Номер</dt>
        <dd>@Model.PhoneNumber</dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Id счета</th>
                    <th>Кол-во средств</th>
                </tr>
                @foreach (var item in Model.UserAccounts)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.AmountOfMoney)
                        </td>
                    </tr>
                }
            </table>
        </dd>

        <dd class="col-sm-10">
            <table class="table">
                <tr>
                    <th>Id роли</th>
                    <th>Роль</th>
                </tr>
                @foreach (var item in Model.UserRoles)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Role.Name)
                        </td>
                    </tr>
                }
            </table>
        </dd>
    </dl>
</div>